{
  "info": {
    "name": "StreamIt Backend",
    "_postman_id": "2b4c2b8b-0000-4a00-b000-000000streamit",
    "description": "Postman collection for the StreamIt backend (health, auth, videos, me routes).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "authToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /api/auth/register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          },
          "response": []
        },
        {
          "name": "POST /api/auth/login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          },
          "response": []
        },
        {
          "name": "GET /api/auth/me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/api/auth/me"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Videos",
      "item": [
        {
          "name": "GET /api/videos",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/videos"
          },
          "response": []
        },
        {
          "name": "GET /api/videos/:videoId",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/videos/1"
          },
          "response": []
        },
        {
          "name": "GET /api/videos/:videoId/stream",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/videos/1/stream"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Me (My List & Watch History)",
      "item": [
        {
          "name": "GET /api/me/list",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/api/me/list"
          },
          "response": []
        },
        {
          "name": "POST /api/me/list/:videoId (Add to My List)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/api/me/list/1"
          },
          "response": []
        },
        {
          "name": "DELETE /api/me/list/:videoId (Remove from My List)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/api/me/list/1"
          },
          "response": []
        },
        {
          "name": "GET /api/me/watch-history",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/api/me/watch-history"
          },
          "response": []
        },
        {
          "name": "POST /api/me/watch-history (Update position)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"videoId\": 1,\n  \"lastPositionSeconds\": 120\n}"
            },
            "url": "{{baseUrl}}/api/me/watch-history"
          },
          "response": []
        }
      ]
    }
  ]
}
